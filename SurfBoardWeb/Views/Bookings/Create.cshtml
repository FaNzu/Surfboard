@model SurfBoardWeb.Models.Bookings

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bookings</h4>
<hr />
@if (ViewBag.Message != null)
{
	<script type="text/javascript">
		window.onload = function () {
			alert("@ViewBag.Message");
		};
	</script>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input name="Id" hidden value="@ViewData["SurfboardId"]" />
            <label>@ViewData["SurfboardId"]</label>
            <label>@ViewData["Name"]</label>
            
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="BoardId" />
            @*<div class="form-group">
                <label hidden asp-for="UserName" class="control-label"></label>
                <select hidden asp-for="UserName" class="form-control" asp-items="ViewBag.UserName"></select>
            </div>*@

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
